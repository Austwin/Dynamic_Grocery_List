extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='item_name') Name:
      input#item_name.form-control(type='text', placeholder='Eggs, Milk, etc.' name='item_name' value=(undefined===item ? '' : item.item_name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
